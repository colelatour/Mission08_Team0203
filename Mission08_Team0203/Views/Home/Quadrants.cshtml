@model IEnumerable<Mission08_Team0203.Models.Task>
@using System.Linq

@{
    ViewData["Title"] = "Quadrants";
    var openTasks = Model?.Where(t => !t.Completed).ToList() ?? new List<Mission08_Team0203.Models.Task>();
}

<div class="container-fluid">
    <h1 class="mb-4">Quadrants View</h1>

    <div class="row g-4">
        <div class="col-12 col-lg-6">
            <div class="card h-100 border-danger">
                <div class="card-header bg-danger text-white">
                    Quadrant I: Important / Urgent
                </div>
                <div class="card-body">
                    @{
                        var q1 = openTasks.Where(t => t.Quadrant == 1).ToList();
                    }
                    @if (!q1.Any())
                    {
                        <p class="text-muted mb-0">No tasks in this quadrant.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in q1)
                            {
                                <li class="list-group-item px-0">
                                    <div class="d-flex flex-column gap-2">
                                        <div>
                                            <strong>@task.Title</strong>
                                            @if (task.DueDate != default)
                                            {
                                                <div class="small text-muted">Due: @task.DueDate.ToString("M/d/yyyy")</div>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(task.Category))
                                            {
                                                <div class="small text-muted">Category: @task.Category</div>
                                            }
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@task.Id" method="post">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                            <form asp-action="MarkComplete" asp-route-id="@task.Id" method="post">
                                                <button type="submit" class="btn btn-sm btn-success">Mark Completed</button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

